{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "module": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
